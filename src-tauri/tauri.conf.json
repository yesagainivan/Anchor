{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Anchor",
  "version": "0.2.0",
  "identifier": "com.ivanowono.anchor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Anchor",
        "width": 1000,
        "height": 700
      },
      {
        "label": "widget",
        "url": "widget.html",
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "width": 300,
        "height": 300
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}